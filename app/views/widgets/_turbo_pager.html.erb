<div id="pager" class="min-w-full my-8 flex justify-between">
  <div>
    <% if @pagy.prev %>
      <%= link_to "< Previous page", turbo_widgets_path(page: pagy.prev), data: {turbo_action: 'advance'}, class: "rounded py-3 px-5 bg-gray-600 text-white block hover:bg-gray-800" %>
    <% end %>
  </div>
  <div>
    <% if @pagy.next %>
      <%= link_to "Next page >", turbo_widgets_path(page: pagy.next), data: {turbo_action: 'advance'}, class: "rounded py-3 px-5 bg-gray-600 text-white block hover:bg-gray-800" %>
    <% end %>
  </div>
</div>